@model Applicant
@{
    ViewData["Title"] = "Add a new Applicant";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Your Personal Information</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Applicant" asp-action="AddUser" method="post" enctype="application/x-www-form-urlencoded">

                        <!-- Validation Errors -->
                        <div class="text-danger mb-3" asp-validation-summary="All"></div>

                        <!-- Name Field -->
                        <div class="form-group mb-4">
                            <label asp-for="nameUser" class="form-label">Your Name:</label>
                            <input type="text" asp-for="nameUser" class="form-control" placeholder="Enter your name" />
                        </div>

                        <!-- Email Field -->
                        <div class="form-group mb-4">
                            <label asp-for="emailUser" class="form-label">Your Email:</label>
                            <input type="email" asp-for="emailUser" class="form-control" placeholder="Enter your email" />
                        </div>

                        <!-- Hidden Fields -->
                        <div class="form-group">
                            <input type="hidden" asp-for="statusUser" value="Message Not Sent" />
                            <input type="hidden" asp-for="jobID" />
                        </div>

                        <!-- Submit and Cancel Buttons -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success btn-lg px-4">Apply</button>
                            <a asp-controller="Applicant" asp-action="ListJobs" class="btn btn-outline-secondary btn-lg px-4 ms-3">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
